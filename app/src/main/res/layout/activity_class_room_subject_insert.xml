<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ClassRoomSubjectInsertActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="13dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helveticabold"
            android:gravity="center"
            android:text="Insert Class"
            android:textColor="@color/yellowColor1"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/helvetica"
            android:hint="Class Name"
            android:inputType="textPersonName"
            android:textColor="@color/yellowColor1"
            android:textColorHint="@color/white"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/spinnerInsertClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#fca311"
            android:backgroundTintMode="src_in"
            android:dropDownSelector="@color/colorPrimary"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/buttonInsertClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#fca311"
            android:fontFamily="@font/helveticabold"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Insert"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="28dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/helveticabold"
            android:gravity="center"
            android:text="Insert Room"
            android:textColor="@color/yellowColor1"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/insertRoomNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/helvetica"
            android:hint="Room Number"
            android:inputType="textPersonName"
            android:textColor="@color/yellowColor1"
            android:textColorHint="@color/white"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/insertFloorNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/helvetica"
            android:hint="Floor Number"
            android:inputType="textPersonName"
            android:textColor="@color/yellowColor1"
            android:textColorHint="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonInsertRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/yellowColor1"
            android:fontFamily="@font/helveticabold"
            android:text="Insert"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="56dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/helveticabold"
            android:gravity="center"
            android:text="Insert Subject"
            android:textColor="@color/yellowColor1"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/insertSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/helvetica"
            android:hint="Subject Name"
            android:inputType="textPersonName"
            android:textColor="@color/yellowColor1"
            android:textColorHint="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonInsertSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/yellowColor1"
            android:fontFamily="@font/helveticabold"
            android:text="Insert"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>